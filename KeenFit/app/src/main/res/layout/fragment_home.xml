<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground">

    <FrameLayout
        android:id="@+id/h_Topbar_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.14" />

    <ImageButton
        android:id="@+id/menuBtn"
        android:layout_width="91dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/h_Topbar_background"
        app:layout_constraintStart_toStartOf="@+id/h_Topbar_background"
        app:layout_constraintTop_toTopOf="@+id/h_Topbar_background"
        app:srcCompat="@drawable/icon_1" />

    <TextView
        android:id="@+id/Title_lbl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="KeenFit"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/h_Greeting_lbl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/h_Topbar_background"
        app:layout_constraintEnd_toEndOf="@+id/h_Topbar_background"
        app:layout_constraintStart_toEndOf="@+id/menuBtn"
        app:layout_constraintTop_toBottomOf="@+id/Title_lbl" />

    <FrameLayout
        android:id="@+id/h_Summary_frame"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/h_Topbar_background">

    </FrameLayout>

    <TextView
        android:id="@+id/entires_lbl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorLightGrey"
        android:text="Entries"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="650dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="329dp" />

    <ImageButton
        android:id="@+id/h_AddFood_btn"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:srcCompat="@drawable/icon_addfood" />

    <TextView
        android:id="@+id/addFood_lbl"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:text="Add Food"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        app:barrierAllowsGoneWidgets="false"
        app:layout_constraintBottom_toTopOf="@+id/h_AddFood_btn"
        app:layout_constraintEnd_toEndOf="@+id/h_AddFood_btn"
        app:layout_constraintStart_toStartOf="@+id/h_AddFood_btn" />

    <ImageButton
        android:id="@+id/h_MealHistory_btn"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/h_AddFood_btn"
        app:layout_constraintStart_toEndOf="@+id/h_AddFood_btn"
        app:layout_constraintTop_toBottomOf="@+id/addFood_lbl"
        app:srcCompat="@drawable/icon_mealhistory" />

    <TextView
        android:id="@+id/mealHistory_lbl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:text="Meal History"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/h_MealHistory_btn"
        app:layout_constraintEnd_toEndOf="@+id/h_MealHistory_btn"
        app:layout_constraintStart_toStartOf="@+id/h_MealHistory_btn"
        app:layout_constraintTop_toTopOf="@+id/addFood_lbl" />

    <TextView
        android:id="@+id/goals_lbl"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:text="Goals"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/h_AddFood_btn"
        app:layout_constraintStart_toStartOf="@+id/h_AddFood_btn"
        app:layout_constraintTop_toBottomOf="@+id/h_AddFood_btn" />

    <ImageButton
        android:id="@+id/h_Goals_btn"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="@+id/h_AddFood_btn"
        app:layout_constraintStart_toStartOf="@+id/h_AddFood_btn"
        app:layout_constraintTop_toBottomOf="@+id/goals_lbl"
        app:srcCompat="@drawable/icon_goals" />

    <TextView
        android:id="@+id/entries_lbl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Entries"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/h_Goals_btn"
        app:layout_constraintEnd_toEndOf="@+id/mealHistory_lbl"
        app:layout_constraintStart_toStartOf="@+id/mealHistory_lbl"
        app:layout_constraintTop_toTopOf="@+id/goals_lbl"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/h_Entries_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/h_Goals_btn"
        app:layout_constraintEnd_toEndOf="@+id/h_MealHistory_btn"
        app:layout_constraintStart_toStartOf="@+id/h_MealHistory_btn"
        app:layout_constraintTop_toTopOf="@+id/h_Goals_btn"
        app:srcCompat="@drawable/icon_entrys" />

    <TextView
        android:id="@+id/friends_lbl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Friends"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/mealHistory_lbl"
        app:layout_constraintEnd_toEndOf="@+id/h_Friends_btn"
        app:layout_constraintStart_toStartOf="@+id/h_Friends_btn"
        app:layout_constraintTop_toTopOf="@+id/mealHistory_lbl"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/h_Friends_btn"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/h_MealHistory_btn"
        app:layout_constraintStart_toEndOf="@+id/h_MealHistory_btn"
        app:layout_constraintTop_toBottomOf="@+id/mealHistory_lbl"
        app:srcCompat="@drawable/icon_friends" />

    <TextView
        android:id="@+id/totalEntries_lbl"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorLightGrey"
        android:text="TOTAL ENTRIES"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@+id/friends_lbl"
        app:layout_constraintStart_toStartOf="@+id/friends_lbl"
        app:layout_constraintTop_toTopOf="@+id/h_Entries_btn" />

    <TextView
        android:id="@+id/h_TotalEntries_txt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorLightGrey"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/h_Entries_btn"
        app:layout_constraintEnd_toEndOf="@+id/totalEntries_lbl"
        app:layout_constraintStart_toStartOf="@+id/totalEntries_lbl"
        app:layout_constraintTop_toBottomOf="@+id/totalEntries_lbl" />

</android.support.constraint.ConstraintLayout>